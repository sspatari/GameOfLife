<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/bar_radius" />
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:centerY="0.75"
                android:endColor="#FFFFFF"
                android:angle="0"
                />
            <stroke android:width="1dp" android:color="#DF6773" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="@dimen/bar_radius" />
                <gradient
                    android:startColor="#FF45FF"
                    android:centerColor="#EB23EF"
                    android:centerY="0.75"
                    android:endColor="#9A14FF"
                    android:angle="0"
                    />
                <stroke android:width="1dp" android:color="#DF6773" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="@dimen/bar_radius" />
                <gradient
                    android:startColor="#FF4500"
                    android:centerColor="#EB2348"
                    android:centerY="0.75"
                    android:endColor="#9A1409"
                    android:angle="0"
                    />
                <stroke android:width="1dp" android:color="#DF6773" />
            </shape>
        </clip>
    </item>
</layer-list>