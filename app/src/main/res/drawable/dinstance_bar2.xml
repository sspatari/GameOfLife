<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/bar_radius" />
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:centerY="0.75"
                android:endColor="#FFFFFF"
                android:angle="270"
                />
            <stroke android:width="1dp" android:color="#DF6773" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/bar_radius" />
                <gradient
                    android:startColor="#FF45FF"
                    android:centerColor="#EB23EF"
                    android:centerY="0.75"
                    android:endColor="#9A14FF"
                    android:angle="270"
                    />
                <stroke android:width="1dp" android:color="#DF6773" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="@dimen/bar_radius" />
                <gradient
                    android:startColor="#01FE0D"
                    android:centerColor="#26E123"
                    android:centerY="0.75"
                    android:endColor="#67AC48"
                    android:angle="270"
                    />
                <stroke android:width="1dp" android:color="#DF6773" />
            </shape>
        </clip>
    </item>
</layer-list>